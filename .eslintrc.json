{
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:@next/next/recommended"
    ],
    "env": {
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "rules": {
      "semi": "error",
      "quotes": ["error", "single"],
      "react/prop-types": "off",
      "eol-last": ["error", "always"]
    },
    "settings": {
      "react": {
        "version": "18"
      }
    }
  }
